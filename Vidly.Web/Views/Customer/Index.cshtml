@model IEnumerable<Vidly.Web.Models.Customer>

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <p>We don't have any customers yet!</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td><strong>Customer</strong></td>
                <td><strong>Membership Type</strong></td>
            </tr>
        </thead>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    <a href="Customer/Details/@customer.Id" class="">@customer.Name</a>
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>
        }
    </table>
}