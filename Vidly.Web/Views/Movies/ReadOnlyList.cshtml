}

<h2>Movies</h2>
  <table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th><strong>Movie</strong></th>
            <th><strong>Genre</strong></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts{
        <script>
            $(document).ready(function(){
                var table = $("#movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    columns: [{
                            data: "name",
                        },
                        {
                            data: "genre.name"
                        }]
                });
            });
        </script>
    }